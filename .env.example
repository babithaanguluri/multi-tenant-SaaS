# Example env values for local (non-Docker) runs.
# For evaluation, Docker uses values embedded in docker-compose.yml.

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saas_db
DB_USER=postgres
DB_PASSWORD=postgres

# Auth
JWT_SECRET=replace-with-a-strong-secret-at-least-32-chars
JWT_EXPIRES_IN=24h

# Backend
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Frontend
# If running the frontend separately, point this to your backend API.
VITE_API_URL=http://localhost:5000/api
